{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "allowJs": true,
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "Node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        ".storybook/**/*",
        "src/**/*",
    ],
    "exclude": [
        "./node_modules/**/*",
        "./build/**/*",
        "./dist/**/*",
    ]
}